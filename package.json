{
    "name": "safe-mdx",
    "version": "0.0.6",
    "private": false,
    "description": "Render MDX in React without eval",
    "repository": "https://github.com/holocron-hq/safe-mdx",
    "type": "module",
    "types": "./dist/safe-mdx.d.ts",
    "exports": {
        ".": {
            "types": "./dist/safe-mdx.d.ts",
            "default": "./dist/safe-mdx.js"
        },
        "./src/*": "./src/*.tsx",
        "./package.json": "./package.json"
    },
    "scripts": {
        "build": "tsc",
        "test": "vitest",
        "prepublishOnly": "pnpm build"
    },
    "files": [
        "dist",
        "src"
    ],
    "keywords": [
        "mdx"
    ],
    "author": "remorses <beats.by.morse@gmail.com>",
    "license": "MIT",
    "peerDependencies": {
        "react": "*"
    },
    "dependencies": {
        "collapse-white-space": "^2.1.0",
        "html-to-jsx-transform": "^1.0.0",
        "remark": "^15.0.1",
        "remark-frontmatter": "^5.0.0",
        "remark-gfm": "^4.0.0",
        "remark-mdx": "^3.0.0",
        "unified": "^11.0.5",
        "unist-util-visit": "^5.0.0"
    },
    "devDependencies": {
        "@types/mdast": "^4.0.0",
        "@types/node": "^22.15.17",
        "@types/react": "^19.1.3",
        "@types/react-dom": "^19.1.3",
        "@vitest/coverage-v8": "^1.6.0",
        "dedent": "^1.5.1",
        "mdast-util-mdx-jsx": "^3.2.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "typescript": "5.8.3",
        "vitest": "^3.1.2"
    }
}
